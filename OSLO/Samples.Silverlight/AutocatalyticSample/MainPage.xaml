<UserControl x:Class="AutocatalyticSample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:d3="clr-namespace:Microsoft.Research.DynamicDataDisplay;assembly=DynamicDataDisplay.Silverlight"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    <Grid x:Name="LayoutRoot" Background="White">
        <!-- D3 markup starts here -->
        <d3:Chart Name="plotter">
            <Grid>
                <!--Plot graphs-->
                <d3:LineGraph x:Name="x1" Description="x[1]" Stroke="LightBlue" StrokeThickness="1" />
                <d3:LineGraph x:Name="x2" Description="x[2]" Stroke="#FF0000" StrokeThickness="1"/>
                <d3:LineGraph x:Name="x3" Description="x[3]" Stroke="#00FF00" StrokeThickness="1" />
                <d3:LineGraph x:Name="x4" Description="x[4]" Stroke="#0000FF" StrokeThickness="1"/>
            </Grid>
        </d3:Chart>
    </Grid>
</UserControl>
